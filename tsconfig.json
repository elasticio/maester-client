{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "target": "es2016",
    "lib": [
      "es2019"
    ],
    "declaration": true,
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "rootDirs": [
      "./"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "coverage"
  ]
}